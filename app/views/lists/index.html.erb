<h1>List of lists :D</h1>

<% @lists.each do |list| %>
	<div id = "post-header">
		<div class = "post-title"><%= list.title %> with <%= pluralize(list.tasks.count, "task") %></div>
		<div class = "author-time"><%= list.user.username.humanize %></div>
	</div>
	<div id = "post-content">
		<%= list.description %>
	</div>
	<%= link_to 'Show', list, class: "btn btn-primary"%>
	<% if can? :edit, List %>
		<%= link_to 'Edit', edit_list_path(list), class: "btn btn-success"%>
	<% end %>
	<% if can? :destroy, List %>
		<%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
	<% end %>
<% end %>

<br />

