<% if (user_signed_in?) && (list.user_id == current_user.id) %>
	<%= form_for([list, list.tasks.build], remote: true) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :content %>
	<%= f.text_field :content %>

	<%= f.submit "Add task", class: "btn btn-success" %>
<% end %>
<% end %>
